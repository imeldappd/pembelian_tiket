extends ../layout/base 
block content 
	section.content-header 
		h1 
			| Edit Customer
			small judul for editing customer data
		ol.breadcrumb 
			li 
				a(href='#') 
					i.fa.fa-dashboard
					| Level 
			li.active Here 
	section.content
		.box
			.box-header.with-border
				h3.box-title
					| Customer
				.box-tools.pull-right
					button(type='button', data-widget='collapse', data-toggle='tooltip',title='collapse').btn.btn-box-tool
						i.fa.fa-minus
					
			.box-body
				form(role='form',method='post' action='/customers/edit/#{(id==undefined) ? data.id : id}' enctype="multipart/form-data")
					.row
						
						.col-xs-6
							.box-body
								- if (messages.msg_error) 
									.alert.alert-danger.alert-dismissable 
										button.close(type='button', data-dismiss='alert', aria-hidden='true') 
											| ×
										h4
											i.icon.fa.fa-ban
											| Alert! 
										| !{messages.msg_error}
								- if (messages.msg_info) 
									.alert.alert-success.alert-dismissable 
										button.close(type='button', data-dismiss='alert', aria-hidden='true') 
											| ×
										h4
											i.icon.fa.fa-ban
											| Success! 
										| !{messages.msg_info}
								.form-group
									label
										| judul
									input(type='text',value="#{data.judul}",name='judul',placeholder='Enter judul', autofocus).form-control
								.form-group
									label
										| Waktu
									input(type='text',value="#{ (waktu == undefined) ? data.waktu : waktu }",name='waktu',placeholder='Enter waktu').form-control
								.form-group
									label
										| studio
									input(type='text',value="#{ (studio == undefined) ? data.studio : studio }",name='studio',placeholder='Enter studio').form-control
								.form-group
									label
										| kursi
									input(type='text',value="#{ (kursi == undefined) ? data.kursi : kursi }",name='kursi',placeholder='Enter kursi').form-control
								.form-group
									label
										| harga
									input(type='text',value="#{ (harga == undefined) ? data.harga : harga }",name='harga',placeholder='Enter harga').form-control
								.form-group
									label
										| Gambar
									input(type='file',value="#{ (gambar == undefined) ? data.gambar : gambar }",name='gambar',placeholder='Masukkan Gambar').form-control
							.box-footer
								input(type="hidden",name="_method", value="PUT")
								button(type='submit').btn.btn-primary
									i.fa.fa-pencil 
									|  Edit
								a(href='/customers').btn.btn-primary.pull-right
									| Back